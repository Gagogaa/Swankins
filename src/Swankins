# TODO work on the sending the tweets!

if __name__ == '__main__':
    try:
        sources = ['../books/' + x for x in os.listdir('../books')]

        markov = Markov(sources)

        for message in markov.messages():
            print(message)

    except KeyboardInterrupt:
        print('Shutting down ðŸ”½')
        try:
            sys.exit(0)
        except SystemExit:
            os._exit(0)

